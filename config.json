{
  "hotkeys": {
    "toggle_recording": "alt"
  },
  "recording": {
    "countdown_seconds": 60,
    "audio_format": "wav",
    "realtime_chunk_seconds": 10
  },
  "providers": [
    {
      "name": "groq",
      "api_key_env": "GROQ_API_KEY",
      "models": [
        { "name": "whisper-large-v3", "type": "asr" },
        { "name": "llama-3.3-70b-versatile", "type": "llm" }
      ]
    },
    {
      "name": "google",
      "api_key_env": "GEMINI_API_KEY",
      "models": [
        { "name": "gemini-2.5-flash-preview-05-20", "type": "vision" }
      ]
    }
  ],
  "services": {
    "asr": {
      "provider_index": 0,
      "model_index": 0
    },
    "text_correction": {
      "provider_index": 0,
      "model_index": 1,
      "temperature": 0.3
    },
    "vision": {
      "provider_index": 1,
      "model_index": 0,
      "max_width": 1200
    },
    "content_enhancement": {
      "provider_index": 0,
      "model_index": 1
    }
  },
  "proxy": {
    "http": "http://localhost:7890",
    "https": "http://localhost:7890"
  },
  "output": {
    "_comment": "The 'mode' determines the output action. Use 'clipboard' to copy the result to the clipboard, or 'paste' to paste it directly into the last active window.",
    "save_to_file": true,
    "filepath": "output.txt",
    "mode": "paste"
  }
}
